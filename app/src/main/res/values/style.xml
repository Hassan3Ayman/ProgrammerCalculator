<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="numberEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
        <item name="android:backgroundTint">@color/underline_text_color</item>
        <item name="android:textColor">@color/edit_text_color</item>
    </style>
    <style name="numText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/edit_text_title_color</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>
</resources>